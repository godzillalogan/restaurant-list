<div class="container">
  <h1 class="text-center text-info">編輯餐廳</h1>
  <form action="/restaurants/{{restaurant._id}}?_method=PUT" method="POST" id="form" novalidate>
    <div class="mb-3 form-group">
      <label for="name" class="form-label">餐廳名稱</label>
      <input type="text" class="form-control" name="name" id="name" placeholder="Restaurant Name" value="{{restaurant.name}}" required>
      <div class="valid-feedback">OK!</div>
      <div class="invalid-feedback">This field is required.</div>
    </div>
    <div class="mb-3 form-group">
      <label for="name_en" class="form-label">餐廳英文名稱</label>
      <input type="text" class="form-control" name="name_en" id="name_en"  placeholder="Restaurant English Name" value="{{restaurant.name_en}}" required>
      <div class="valid-feedback">OK!</div>
      <div class="invalid-feedback">This field is required.</div>
    </div>
    <div class="mb-3 form-group">
      <label for="category" class="form-label">餐廳分類</label>
      <input type="text" list="categorylist" class="form-control" name="category" id="category" placeholder="Category" value="{{restaurant.category}}" required>
      <datalist id="categorylist">
        <option>美式料理</option>
        <option>日式料理</option>
        <option>義式料理</option>
        <option>中東料理</option>
        <option>咖啡</option>
        <option>酒吧</option>
      </datalist>      
      <div class="valid-feedback">OK!</div>
      <div class="invalid-feedback">This field is required.</div>
    </div>
    <div class="mb-3 form-group">
      <label for="image" class="form-label">餐廳照片</label>
      <input type="url" class="form-control" name="image" id="image"  placeholder="Image" value="{{restaurant.image}}" required>
      <div class="valid-feedback">OK!</div>
      <div class="invalid-feedback">This field is required.</div>
    </div>
    <div class="mb-3 form-group">
      <label for="location" class="form-label">餐廳地址</label>
      <input type="text" class="form-control" name="location" id="location"  placeholder="Location" value="{{restaurant.location}}" required>
      <div class="valid-feedback">OK!</div>
      <div class="invalid-feedback">This field is required.</div>
    </div>
    <div class="mb-3 form-group">
      <label class="form-label">餐廳電話</label>
      <input type="text" class="form-control" name="phone" id="phone" placeholder="Phone" inputmode="numeric" value="{{restaurant.phone}}" required>
      <div class="valid-feedback">OK!</div>
      <div class="invalid-feedback">This field is required.</div>
    </div>
    <div class="mb-3 form-group">
      <label for="google_map" class="form-label">餐廳google地圖</label>
      <input type="url" class="form-control" name="google_map" id="google_map"  placeholder="Google map" value="{{restaurant.google_map}}" required>
      <div class="valid-feedback">OK!</div>
      <div class="invalid-feedback">This field is required.</div>
    </div>
    <div class="mb-3 form-group">
      <label for="rating" class="form-label">評分</label>
      <input type="number" min="0.1"  max="5" step="0.1" class="form-control" name="rating" id="rating"  placeholder="rating" value="{{restaurant.rating}}" required>
      <div class="valid-feedback">OK!</div>
      <div class="invalid-feedback">This field is required.</div>
    </div>
    <div class="mb-3 form-group">
      <label for="description" class="form-label">餐廳描述</label>
      <textarea type="text" class="form-control" name="description" id="description" placeholder="description" rows="7" required>{{restaurant.description}}</textarea>
      <div class="valid-feedback">OK!</div>
      <div class="invalid-feedback">This field is required.</div>
    </div>
    <button type="submit" class="btn btn-info" id="submit-button">編輯餐廳</button>
    <a href="/" class="btn btn-secondary mr-2">Back</a>
  </form>
</div>